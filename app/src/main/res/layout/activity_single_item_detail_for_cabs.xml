<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Activities.SingleItemDetailActivityForCabs">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:id="@+id/rl_top"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:background="@color/colorPink">

                    <RelativeLayout
                        android:layout_centerInParent="true"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/circle">

                        <com.shoaibnwar.iwsm.Utils.CircleImageView
                            android:id="@+id/iv_person2"
                            android:layout_alignParentRight="true"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/person_icon"/>
                    </RelativeLayout>
                    <ImageView
                        android:id="@+id/iv_back_arrow"
                        android:layout_width="30dp"
                        android:layout_height="20dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="15dp"
                        android:scaleType="fitXY"
                        android:tint="@color/white"
                        android:src="@drawable/arrow_back"/>


                    <RelativeLayout
                        android:layout_width="100dp"
                        android:layout_height="40dp"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="5dp">
                        <TextView
                            android:id="@+id/tv_tag"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:text="Booking"
                            android:textColor="@color/white"/>
                    </RelativeLayout>
                </RelativeLayout>

                <LinearLayout
                    android:layout_below="@+id/rl_top"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp">


                    <TextView
                        android:id="@+id/tv_contact_detail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Contact Detail"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:textSize="22dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginLeft="40dp">
                        <TextView
                            android:id="@+id/tv_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Name"
                            android:layout_weight="1"
                            android:textColor="@color/black"
                            android:layout_marginTop="8dp"/>
                            <TextView
                                android:id="@+id/tv_m_name"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Shoaib Anwar"

                                android:textColor="@color/black"
                                android:layout_marginTop="8dp"/>
                    </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginLeft="40dp">
                            <TextView
                                android:id="@+id/tv_phone"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Phone#"
                                android:textColor="@color/black"
                                android:layout_marginTop="8dp"/>
                            <TextView
                                android:id="@+id/tv_m_phome"
                                android:layout_width="match_parent"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:text="+92-134-1234567"
                                android:textColor="@color/black"
                                android:layout_marginTop="8dp"/>
                        </LinearLayout>


                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="@color/black"
                        android:layout_marginTop="10dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_gravity="center"
                        android:layout_marginRight="10dp">

                       <TextView
                           android:id="@+id/tv_assignment_detail"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="Booking Instructions"
                           android:textColor="@color/black"
                           android:textStyle="bold"
                           android:textSize="22dp"/>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">




                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginLeft="40dp">
                                <TextView
                                    android:id="@+id/tv_size"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="Instructions for booking"
                                    android:textColor="@color/black"
                                    android:layout_marginTop="8dp"/>

                            </LinearLayout>



                        </LinearLayout>


                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="@color/black"
                        android:layout_marginTop="10dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:orientation="vertical"
                        android:layout_marginLeft="10dp">

                        <TextView
                            android:id="@+id/tv_address"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Address"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:textSize="22dp"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tv_address_line_1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Arfa Sofware Technology Park"
                                android:textColor="@color/black"
                                android:layout_marginTop="6dp"/>
                            <TextView
                                android:id="@+id/tv_address_line_2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Feroz pur Road"
                                android:textColor="@color/black"
                                android:layout_marginTop="2dp"/>

                            <TextView
                                android:id="@+id/tv_address_line_4"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Lahore, Pakistan"
                                android:textColor="@color/black"
                                android:layout_marginTop="2dp"/>

                        </LinearLayout>

                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="@color/black"
                        android:layout_marginTop="10dp"/>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="50dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_last_visit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Last Visit"
                            android:textStyle="bold"
                            android:textSize="22dp"
                            android:textColor="@color/black"
                            android:layout_centerVertical="true" />

                        <TextView
                            android:id="@+id/tv_m_last_visit"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="The product is some how demand"
                            android:textColor="@color/black"
                            android:layout_marginTop="8dp"/>

                    </LinearLayout>

                </LinearLayout>


            </RelativeLayout>

        </ScrollView>

        <LinearLayout
            android:id="@+id/bt_buttons"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal">
            <Button
                android:id="@+id/bt_start_assignment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Start Assignment"
                android:layout_marginRight="4dp"
                android:background="@color/colorPink"
                android:textColor="@color/white"
                android:textAllCaps="false"/>

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rrRL"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerInParent="true"
            android:background="@drawable/circle_background"
            android:visibility="gone">
            <ImageView
                android:id="@+id/loading_img_rr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/loadingred"/>
        </RelativeLayout>

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
