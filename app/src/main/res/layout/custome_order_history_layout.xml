<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/rl_single_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp">

                <LinearLayout
                    android:id="@+id/ll_main_item_views"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:animateLayoutChanges="true">

                        <LinearLayout
                            android:id="@+id/ll_item_views"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <RelativeLayout
                                android:layout_width="100dp"
                                android:layout_height="match_parent"
                                android:background="@color/white">
                                <ImageView
                                    android:id="@+id/iv_order_item_image"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:padding="20dp"
                                    android:src="@drawable/baskect_icon"/>
                            </RelativeLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="8dp"
                                    android:layout_marginTop="5dp">
                                    <TextView
                                        android:id="@+id/tv_assigned_by"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Assigned By:"
                                        android:textColor="@color/color_text_hint"/>

                                    <TextView
                                        android:id="@+id/tv_assigner_name"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Shoaib Anwar"
                                        android:layout_toRightOf="@+id/tv_assigned_by"
                                        android:layout_marginLeft="4dp"
                                        android:textStyle="bold"
                                        android:textColor="@color/color_text_hint"/>

                                </RelativeLayout>

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="8dp">
                                    <TextView
                                        android:id="@+id/tv_assigned_to"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Assigned To:"
                                        android:textColor="@color/color_text_hint"/>

                                    <TextView
                                        android:id="@+id/tv_saleman_name"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Rana Naveed"
                                        android:layout_toRightOf="@+id/tv_assigned_to"
                                        android:layout_marginLeft="4dp"
                                        android:textStyle="bold"
                                        android:textColor="@color/color_text_hint"/>

                                </RelativeLayout>

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="8dp">
                                    <TextView
                                        android:id="@+id/tv_text_total_items"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Total Items:"
                                        android:textColor="@color/color_text_hint"/>
                                    <TextView
                                        android:id="@+id/tv_total_items"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="250"
                                        android:textStyle="bold"
                                        android:layout_toRightOf="@+id/tv_text_total_items"
                                        android:layout_marginLeft="4dp"
                                        android:textColor="@color/color_text_hint"/>

                                </RelativeLayout>

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="8dp">
                                    <TextView
                                        android:id="@+id/tv_text_total_price"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Total Price:"
                                        android:textColor="@color/color_text_hint"/>

                                    <TextView
                                        android:id="@+id/tv_total_price"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Rs.250"
                                        android:textStyle="bold"
                                        android:layout_toRightOf="@+id/tv_text_total_price"
                                        android:layout_marginLeft="4dp"
                                        android:textColor="@color/color_text_hint"/>

                                </RelativeLayout>

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="8dp">
                                    <TextView
                                        android:id="@+id/tv_txt_start_date"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Start Date:"
                                        android:textColor="@color/color_text_hint"/>
                                    <TextView
                                        android:id="@+id/tv_start_date"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="10-jul-2018"
                                        android:textStyle="bold"
                                        android:layout_toRightOf="@+id/tv_txt_start_date"
                                        android:layout_marginLeft="4dp"
                                        android:textColor="@color/color_text_hint"/>

                                </RelativeLayout>

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="8dp">
                                    <TextView
                                        android:id="@+id/tv_txt_start_time"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Start time:"
                                        android:textColor="@color/color_text_hint"/>
                                    <TextView
                                        android:id="@+id/tv_stat_time"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="05:04 PM"
                                        android:textStyle="bold"
                                        android:layout_toRightOf="@+id/tv_txt_start_time"
                                        android:layout_marginLeft="4dp"
                                        android:textColor="@color/color_text_hint"/>

                                </RelativeLayout>

                                <TextView
                                    android:id="@+id/tv_order_id"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:visibility="gone"/>

                            </LinearLayout>
                        </LinearLayout>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/black"
                        android:layout_marginTop="6dp"/>
                </LinearLayout>
            </RelativeLayout>

        </RelativeLayout>

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>