<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="false" android:state_pressed="false" android:state_selected="false">
        <shape android:shape="oval">

            <solid android:color="@color/light_grey_tr" />  <!-- Fill color -->

            <stroke android:width="4dp" android:color="@color/light_grey_t" /> <!-- Outerline color -->

        </shape>
    </item>
    <item android:state_selected="true">

        <shape android:shape="oval">
            <solid android:color="@color/light_grey_tr" />  <!-- Fill color -->

            <stroke android:width="4dp" android:color="@color/light_grey_t" /> <!-- Outerline color -->
        </shape>
    </item>
    <item android:state_focused="true">

        <shape android:shape="oval">
            <solid android:color="@color/light_grey_tr" />  <!-- Fill color -->

            <stroke android:width="4dp" android:color="@color/light_grey_t" /> <!-- Outerline color -->
        </shape>
    </item>
    <item android:state_pressed="true">

        <shape android:shape="oval">
            <solid android:color="@color/light_grey_tr" />  <!-- Fill color -->

            <stroke android:width="4dp" android:color="@color/light_grey_t" /> <!-- Outerline color -->
        </shape>
    </item>
</selector>